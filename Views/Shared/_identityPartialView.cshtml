@if (User.Identity.IsAuthenticated == false)
{
	<a class="btn btn-outline-success my-2 my-sm-0 me-2" asp-controller="Account" asp-action="Login">
		<i class="bi bi-box-arrow-in-right"> Log in</i>
	</a>
	<a class="btn btn-outline-primary my-2 my-sm-0 me-2" asp-controller="Account" asp-action="Register">
		<i class="bi bi-person-plus"> Register </i>
	</a>
}
else
{
	@*UserProfileSection*@
	<div class="dropdown">
		<button class="btn btn-outline-success dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
			<i class="bi bi-person-badge"></i>
			Hello @User.Identity.Name
		</button>
		<ul class="dropdown-menu">
			<li><a class="dropdown-item" asp-action="Index" asp-controller="Orders"><i class="bi bi-list"></i> Orders</a></li>
			@if (User.IsInRole("Admin"))
			{
				<li><a class="dropdown-item" asp-action="Users" asp-controller="Account"><i class="bi bi-people"></i> Users</a></li>
			}
		</ul>
	</div>

	<span style="padding:5px;"></span>
	<form asp-controller="Account" asp-action="Logout">
		<button class="btn btn-outline-danger my-2 my-sm-0">
			<i class="bi bi-box-arrow-in-right"> Log Out</i>
		</button>
	</form>
}