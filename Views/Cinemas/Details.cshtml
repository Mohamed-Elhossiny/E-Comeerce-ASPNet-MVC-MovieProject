@model CinemasDetailViewModel
@{
	ViewData["Title"] = "Details";
}
<div class="container">
	<div class="row">
		<div class="col-md-8 offset-2">
			<h1 class="text-center"> @Model.CinemaName </h1>
			<div class="row">
				<div class="col-md-8 offset-2">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group text-center">
						<img src="/images/Cinemas/@Model.Logo" class="rounded-circle" style="max-width:200px" />
					</div>
					<div class="form-group">
						<label asp-for="Logo" class="control-label"></label>
						<input asp-for="Logo" class="form-control" readonly />
						<span asp-validation-for="Logo" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="CinemaName" class="control-label"></label>
						<input asp-for="CinemaName" class="form-control" readonly />
						<span asp-validation-for="CinemaName" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Description" class="control-label"></label>
						<input asp-for="Description" class="form-control" readonly />
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>
					<div class="form-group mt-3">
						@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
						{
							<a asp-action="Edit" asp-controller="Cinemas" asp-route-id="@Model.Id" class="btn btn-outline-success float-end"><i class="bi bi-pencil-square"></i> Edit</a>
						}
						<a asp-action="Index" asp-controller="Cinemas" class="btn btn-outline-secondary">Show All</a>
					</div>
				</div>
			</div>
		</div>
	</div>

</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}